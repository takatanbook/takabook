
<% unless current_user? %>
<%= form_for @user do |f| %>
<div class="test" style="background-color: #00FF00">
	<div class="row">
		<div class="col-md-offset-5 col-md-3">
			<div class="form-login">
				<h4 style="color: #00FF00">新規会員登録</h4><br />
				<div style="text-align: center">
					<%= f.label :user_name %><br />
					<%= f.text_field :user_name %><br /><br />
					<%= f.label :user_email %><br />
					<%= f.text_field :user_email %><br /><br />
					<%= f.label :password %><br />
					<%= f.password_field :password %></br><br />
					<%= f.label :password_confirmation %><br />
					<%= f.password_field :password_confirmation%><br />
				</div>
				<div class="wrapper">
					<br /><br />
				  	<span class="group-btn">														<%= submit_tag '登録' %>
					</span>
				</div>
			</div>
		</div>
	</div>
</div>
<% end %>

<%= form_for(@user) do|e| %>
	<div id="error_explanation">
	<% if @user.errors.any? %>
		<h2>
			<%= pluralize(@user.errors.count, "error") %> 
			prohibited this user from being saved:
		</h2>

		<ul>
			<% @user.errors.full_messages.each do |msg| %>
				<li style="color :Red"><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
	</div>
<% end %>
<%else%>
<br />
<br />
<br />
<%= link_to 'アクセスで来ません。', root_url%>
<%end %>
